@model StudentEnrolmentSystem.Models.Dto.DeleteDto
@{
    ViewData["Title"] = "Delete Course";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div
    class="fixed inset-0 z-50 grid place-content-center p-4"
    role="dialog"
    aria-modal="true"
    aria-labelledby="modalTitle"
>
    <div class="w-full min-w-[28rem] max-w-md rounded-lg border border-gray-300 px-8 py-12">
        <h2 id="modalTitle" class="text-xl font-semibold text-gray-900 sm:text-2xl">Delete Course</h2>

        <div class="mt-4">
            <p class="text-sm text-pretty text-gray-700">
                Are you sure you want to delete this course? <br> This action cannot be undone.
            </p>
        </div>

        <div class="mt-4">
            <span id="formError" class="mt-1 text-sm text-red-700"></span>
        </div>
        
        <form id="deleteCourseForm" data-action="@Url.RouteUrl("Courses.Delete")"
              class="mt-6 flex justify-between gap-2">
            
            <input type="hidden" asp-for="Id" value="@Model.Id"/>
            
            <button
                type="button" asp-action="Courses"
                class="rounded bg-gray-100 px-4 py-2.5 text-sm font-medium text-gray-700 transition-colors hover:bg-gray-200">
                Go back
            </button>

            <button
                type="submit"
                class="rounded bg-blue-600 px-4 py-2.5 text-sm font-medium text-white transition-colors hover:bg-blue-700">
                Confirm
            </button>
        </form>
    </div>
</div>

@section Scripts {
    <script src="~/js/admin/delete-course.js"></script>
}